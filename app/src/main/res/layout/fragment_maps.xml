<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MapsFragment">


        <!--kart -->
        <FrameLayout
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity">

            <!--værmelding -->
            <androidx.cardview.widget.CardView
                android:id="@+id/weather"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="top|center_horizontal"
                app:cardBackgroundColor="@color/whiteColor"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp">
                <!-- bare et textview for å fylle cardviewet for værmeldingen.
                Fjernes når vi legger inn værmeldingen -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/wtext"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:text="VÆRET I DAG"
                        android:textSize="18sp"
                        android:textColor="@color/DingGrey"/>

                    <ImageView
                        android:id="@+id/weater_icon"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/w_deg"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/DingGrey"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--sveip opp for mer info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/slideUp"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="-40dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#DEFFFFFF">

                <TextView
                    android:id="@+id/valgtSted"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!--dette er den lille pilen som peker oppover for å
                symbolisere at man skal sveipe opp-->
                <ImageView
                    android:id="@+id/up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:textStyle="bold"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp" />

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/up"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="sveip opp" />-->

                <include layout="@layout/favorittknapp"
                    android:id="@+id/favoritt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"/>

            </androidx.cardview.widget.CardView>

            <!--søkeboks -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="70dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="70dp"
                app:cardBackgroundColor="#B3FFFFFF"
                app:cardCornerRadius="12dp">
                <!-- Fragment som har med autocomplete å gjøre-->
                <fragment
                    android:id="@+id/autocomplete_fragment"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    <include layout="@layout/stedinfo"
        android:id="@+id/swipeUp"
        android:visibility="gone"/>

</RelativeLayout>