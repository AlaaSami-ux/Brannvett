<?xml version="1.0" encoding="utf-8"?>
<!--I cardView skal vi plassere alt som har med å vise skogbrannfare for det
stedet man har valgt-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slideDown"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="-40dp"
    app:cardBackgroundColor="@color/whiteColor"
    app:cardCornerRadius="40dp"
    app:cardElevation="10dp"
    tools:context="view.ShowFireIndex">
    <!--Bildet av pil ned som symboliserer at man kan sveipe ned for å lukke activity-->
    <ImageView
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/ic_keyboard_arrow_down_lille_24dp" />
    <!-- Favoritter-knapp -->
    <ImageButton
        android:id="@+id/favoriteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:src="@drawable/ic_favorite_border_black_24dp" />
</androidx.cardview.widget.CardView>